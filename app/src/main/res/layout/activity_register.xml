<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register"
    android:background="@drawable/bg">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/LogoImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/run"
                android:layout_marginTop="40dp"/>

            <ImageView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/or" />

            <EditText
                android:id="@+id/etfnameETRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#FFA500"
                android:hint=" First Name"
                android:textStyle="bold"
                android:background="@drawable/edit_text_border"
                android:padding="5dp"
                />
            <EditText
                android:id="@+id/etlnameETRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#FFA500"
                android:hint=" Last Name"
                android:textStyle="bold"
                android:background="@drawable/edit_text_border"
                android:padding="5dp"
                />
            <EditText
                android:id="@+id/etageETRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#FFA500"
                android:hint=" Age"
                android:textStyle="bold"
                android:background="@drawable/edit_text_border"
                android:padding="5dp"
                />


            <EditText
                android:id="@+id/heightETRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textColor="#FFA500"
                android:hint=" Height in cm"
                android:textStyle="bold"
                android:background="@drawable/edit_text_border"
                android:padding="5dp"
                />


            <EditText
                android:id="@+id/weightETRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textColor="#FFA500"
                android:hint=" Weight in kg"
                android:textStyle="bold"
                android:background="@drawable/edit_text_border"
                android:padding="5dp"
                />


            <EditText
                android:id="@+id/genderETRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textColor="#FFA500"
                android:hint=" Gender(M/F/Other)"
                android:textStyle="bold"
                android:background="@drawable/edit_text_border"
                android:padding="5dp"
                />


            <EditText
                android:id="@+id/emailETRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textColor="#FFA500"
                android:hint=" E-mail Address"
                android:textStyle="bold"
                android:background="@drawable/edit_text_border"
                android:padding="5dp"
                />


            <EditText
                android:id="@+id/passwordETRP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textColor="#FFA500"
                android:hint=" Password (Minimum of 6 characters/nos/special characters)"
                android:padding="5dp"
                android:background="@drawable/edit_text_border"
                android:inputType="textPassword"
                android:textStyle="bold"
                />


            <Button
                android:id="@+id/signup_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_border"
                android:onClick="signup_button_clicked"
                android:text="sign up"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:ignore="OnClick" />


        </LinearLayout>
    </ScrollView>






</LinearLayout>