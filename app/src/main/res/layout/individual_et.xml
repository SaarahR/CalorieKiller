<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".individualet"
    android:background="@drawable/bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <Button
            android:id="@+id/llinkbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_border"
            android:text="press here"
            android:layout_margin="20dp"
            android:onClick="liinkButtonPressed"/>

        <ImageButton
            android:id="@+id/squats1"
            android:layout_width="179dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginTop="-40dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/warmup9" />

        <ImageButton
            android:id="@+id/squats2"
            android:layout_width="183dp"
            android:layout_height="183dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/warup10"/>
        <ImageButton
            android:id="@+id/squats3"
            android:layout_width="183dp"
            android:layout_height="183dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/warmup2"/>

        <ImageButton
            android:id="@+id/homebuttonn"
            android:layout_width="68dp"
            android:layout_height="47dp"
            android:layout_gravity="end"
            android:layout_marginStart="183dp"
            android:layout_marginTop="-20dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="homButtonClicked"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_home_black_24dp" />


        <TextView
            android:id="@+id/nxttext"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/homebutton"
            android:layout_gravity="right"
            android:layout_marginTop="-18dp"
            android:text="home    "
            android:textColor="#ffff"
            android:textSize="15sp"

            />

    </LinearLayout>
</RelativeLayout>






